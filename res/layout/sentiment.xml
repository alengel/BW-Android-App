<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" 
	android:orientation="vertical"
    android:layout_width="fill_parent" 
    android:layout_height="fill_parent"
    android:layout_weight="1">
    
    <LinearLayout
		android:id="@+id/chart"
		android:orientation="vertical"
	    android:layout_width="fill_parent" 
	    android:layout_height="wrap_content"
	    android:layout_weight="1">
	</LinearLayout>
	
    <LinearLayout
		android:layout_below="@+id/chart"
		android:id="@+id/tabbar" 
		android:orientation="horizontal"
	    android:layout_width="fill_parent" 
	    android:layout_height="35dp"
	    android:gravity="center"
	    android:background="#A3A3A3">
	    
	<ImageButton
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginRight="3dp"
        android:id="@+id/sentimentbutton" 
        android:background="@drawable/sentiment_selector">
    </ImageButton>    
        
     <ImageButton
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginRight="3dp"
        android:id="@+id/historybutton"
        android:background="@drawable/history_selector">
    </ImageButton>  
    
   	<ImageButton
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginRight="3dp"
        android:id="@+id/pagetypebutton"
        android:background="@drawable/pagetype_selector">
    </ImageButton> 
    
   	<ImageButton
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginRight="3dp"
        android:id="@+id/topsitesbutton"
        android:background="@drawable/topsites_selector">
    </ImageButton> 
    
    <ImageButton
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginRight="3dp"
        android:id="@+id/toptweetersbutton"
        android:background="@drawable/toptweeters_selector">
    </ImageButton>
    
    <ImageButton
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:id="@+id/mentionsbutton"
        android:background="@drawable/mentions_selector">
    </ImageButton>  
        
	</LinearLayout>
</LinearLayout>

